{
  "AWSTemplateFormatVersion": "2010-09-09",

  "Parameters" : {
    "S3UploadBucket" : {
      "Description" : "Name of an S3 bucket to upload results to",
      "Default": "wpt-results",
      "Type" : "String"
    },
    "S3AccessKey" : {
      "Description" : "S3 access key",
      "NoEcho": "true",
      "Type" : "String"
    },
    "S3SecretKey" : {
      "Description" : "S3 secret key",
      "NoEcho": "true",
      "Type" : "String"
    }
  }, 

  "Resources": {
    "WebpageTest": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "AvailabilityZone": "eu-west-1b",
        "DisableApiTermination": "FALSE",
        "ImageId": "ami-c1aaabb5",
        "InstanceType": "t1.micro",
        "KeyName": "ph-webperf",
        "Monitoring": "false",
        "SecurityGroups": [
          {
            "Ref": "sgwebpagetest"
          }
        ],
        "Tags" : [
          {
            "Key" : "Name",
            "Value" : "WebpageTest"
          },
          {
            "Key" : "Role",
            "Value": "WebpageTest"
          }
        ],
        "UserData": { "Fn::Base64": { "Fn::Join" : ["", [
          "#!/bin/bash -ex\n",
          "touch userdatawashere.txt\n",
          "aptitude -y update\n",
          "aptitude -y install unzip\n",
          "aptitude -y install ffmpeg\n",
          "aptitude -y install apache2\n",
          "aptitude -y install php5\n",
          "aptitude -y install libapache2-mod-php5\n",
          "aptitude -y install php5-gd\n",
          "aptitude -y install php5-curl\n",
          "aptitude -y install php5-zip\n",
          "aptitude -y install php5-zlib\n",
          "aptitude -y install php5-ffmpeg\n",
          "aptitude -y install php-apc\n",

          "wget http://webpagetest.googlecode.com/files/webpagetest_2.11.zip\n",
          "unzip webpagetest_2.11.zip\n",
          "rm -rf /var/www\n",
          "cp -r www/ /var\n",
          "chmod -R 777 /var/www\n",

          "wget https://raw.github.com/phamann/webperf/master/locations.ini\n",
          "cp locations.ini /var/www/settings/locations.ini\n",

          "wget https://raw.github.com/phamann/webperf/master/settings.ini\n",
          "sed -i 's/<S3:accesskey>/", { "Ref" : "S3AccessKey" }, "/g' settings.ini\n",
          "sed -i 's/<S3:secretkey>/", { "Ref" : "S3SecretKey" }, "/g' settings.ini\n",
          "sed -i 's/<S3:uploadbucket>/", { "Ref" : "S3UploadBucket" }, "/g' settings.ini\n",
          "cp settings.ini /var/www/settings/settings.ini\n",

          "sed -i 's/upload_max_filesize = 2M/upload_max_filesize = 50M/g' /etc/php5/apache2/php.ini",
          "sed -i 's/post_max_size = 8M/post_max_size = 50M/g' /etc/php5/apache2/php.ini",

          "/etc/init.d/apache2 restart\n"

        ]]}}
      }
    },

    "AgentIE9": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "AvailabilityZone": "eu-west-1b",
        "DisableApiTermination": "FALSE",
        "ImageId": "ami-8b2c2fff",
        "InstanceType": "m1.small",
        "KeyName": "ph-webperf",
        "Monitoring": "false",
        "SecurityGroups": [
          {
            "Ref": "sgtestagent"
          }
        ],
        "Tags" : [
          {
            "Key" : "Name",
            "Value" : "Agent - IE9"
          },
          {
            "Key" : "Role",
            "Value": "Agent"
          }
       ],
        "UserData": { "Fn::Base64": { "Fn::Join" : ["", [
          "wpt_server=",
          { "Fn::GetAtt" : [ "WebpageTest", "PublicDnsName" ] },
          " ",
          "wpt_location=EU_WEST"
        ]]}}
      }
    },

    "AgentIE8": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "AvailabilityZone": "eu-west-1b",
        "DisableApiTermination": "FALSE",
        "ImageId": "ami-00b18074",
        "InstanceType": "m1.small",
        "KeyName": "ph-webperf",
        "Monitoring": "false",
        "SecurityGroups": [
          {
            "Ref": "sgtestagent"
          }
        ],
        "Tags" : [
          {
            "Key" : "Name",
            "Value" : "Agent - IE8"
          },
          {
            "Key" : "Role",
            "Value": "Agent"
          }
       ],
        "UserData": { "Fn::Base64": { "Fn::Join" : ["", [
          "wpt_server=",
          { "Fn::GetAtt" : [ "WebpageTest", "PublicDnsName" ] },
          " ",
          "wpt_location=EU_WEST_IE8"
        ]]}}
      }
    },

    "sgtestagent": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Group for machines running test browsers",
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80",
            "CidrIp": "0.0.0.0/0"
          },
          {
            "IpProtocol": "tcp",
            "FromPort": "443",
            "ToPort": "443",
            "CidrIp": "0.0.0.0/0"
          }
        ]
      }
    },
    "sgwebpagetest": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Group for machines running webpagetest",
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22",
            "CidrIp": "0.0.0.0/0"
          },
          {
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80",
            "CidrIp": "0.0.0.0/0"
          },
          {
            "IpProtocol": "tcp",
            "FromPort": "443",
            "ToPort": "443",
            "CidrIp": "0.0.0.0/0"
          }
        ]
      }
    }
  },
  "Description": "Create a webperf stack in Ireland"
}
